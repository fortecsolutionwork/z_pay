<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/overall_padding"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textColor="#336a95"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Now, Get Cashback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_marginTop="-15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#336a95"
                    android:textSize="18sp"
                    android:text="to pay using"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp">

                </ImageView>

            </LinearLayout>

            <TextView
                android:gravity="center"
                android:textColor="#336a95"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Anytime, Anywhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:src="@drawable/splash_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>





        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:textSize="14sp"
                android:text="Made by India, Made for India."
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_d_i"
                    android:layout_width="55dp"
                    android:layout_height="55dp">
                </ImageView>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_m_i_i"
                    android:layout_width="55dp"
                    android:layout_height="55dp">

                </ImageView>
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_s_u"
                    android:layout_width="55dp"
                    android:layout_height="55dp">

                </ImageView>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>





</LinearLayout>