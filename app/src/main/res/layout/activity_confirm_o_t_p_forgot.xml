<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

    <LinearLayout
        android:weightSum="5"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:layout_width="match_parent"
                android:layout_height="55dp">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#336a95"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Confirm OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/messageTv"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#8009260C"
                android:textSize="14sp"
                android:text="Enter OTP send to +91 --"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/overall_padding"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <EditText
                android:textStyle="bold"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:id="@+id/code1_et"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:id="@+id/code2_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                />

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:id="@+id/code3_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:id="@+id/code4_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:id="@+id/code5_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textSize="22sp"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@android:color/black"
                android:id="@+id/code6_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:background="#80D3D3D3"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonOne"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonTwo"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonThree"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonFour"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonFive"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonSix"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonSeven"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonEight"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/buttonNine"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/buttonDelete"
                        android:src="@drawable/ic_arrow_back_black"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/buttonZero"

                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>

                    <ImageButton
                        android:layout_gravity="end"
                        android:id="@+id/buttonOkay"
                        android:src="@drawable/ic_check_black"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>